<%

    require 'fancifier'
    #create a new fancifier object
    fanci = Fancifier.new('test');
    #call the necesaries methods
    titlePalindrome = fanci.makePalindrome(@post.title)
    checkPalindrome = fanci.detectPalindrome(@post.title)
    longestPalindrome = fanci.longestPalindrome(@post.title)

 %>

    <p id="notice"></p>

    <%= Color.find(@post.color_id).code %>

    <%= fanci.blue %>

    <%= fanci.raro %>

    <%= fanci.red %>
    <style media="screen">
        img {
            max-width: 400px;
            max-height: 400px;
        }
        .title {
            color: white;
            background-color: <%= Color.find(@post.color_id).code  %>
        }
    </style>

    <div class="title">
        <strong>Title: <%= @post.title %></strong>
    </div>

    <p id="notice"></p>

    <p>

        <div class="<%= titlePalindrome %>">
            <strong>Palindrome title: <%= titlePalindrome %> </strong>
        </div>
        <div class="<%= checkPalindrome %>">
            <strong>Is it a palindrome title? :<% if checkPalindrome %>
                    <p>true</p>
                <% else %>
                    <p>false</p>
                <% end %>
            </strong>

        </div>
        <div class="<%= longestPalindrome %>">
            <strong>Longest palindrome in the tittle: <%= longestPalindrome %> </strong>
        </div>
    </p>

    <p>
        <strong>Photo:</strong>
        <div class="image">
            <%= image_tag(url_for @post.photo) if @post.photo.attached? %>
        </div>
    </p>

    <%= link_to 'Edit', edit_post_path(@post) %>
    |
    <%= link_to 'Back', posts_path %>
